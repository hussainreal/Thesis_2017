    function stringHexToUint(string a) constant returns (uint128) {
        bytes memory b = bytes(a);
        uint i;
        uint result = 0;
        for(i=0; i<b.length; i++){
            uint c = hextoint(b[i]);
            result = result * 16 + c;
        }
        return uint128(result);
    }



